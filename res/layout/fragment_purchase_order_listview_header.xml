<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/purchaseOrderHeaderView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <com.openerp.util.controls.OETextView
        android:id="@+id/txvPurchaseOrderHeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:text="@string/purchase_order_waiting_for_sync_to_start"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.openerp.util.controls.OETextView
        android:id="@+id/txvPurchaseOrderHeaderSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/purchase_order_your_purchase_order_will_appear_shortly"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</LinearLayout>
