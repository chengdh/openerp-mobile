<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/waitingForSyncToStart"
        layout="@layout/fragment_purchase_order_listview_header"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="gone" />

    <include
        android:id="@+id/loadingProgress"
        layout="@layout/listview_data_loading_progress"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="gone" />

    <com.openerp.util.controls.OETextView
        android:id="@+id/txvPurchaseOrderAllReadMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center_horizontal"
        android:padding="10dp"
        android:text="@string/read_all_purchase_orders"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#77778f"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lstPurchaseOrders"
        android:smoothScrollbar="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>